namespace WX.EfCore.Repos;

public static class RepoExtensions
{
    public static async ValueTask<IList<TEntity>> ToListAsync<TEntity>(this IAsyncEnumerable<TEntity> entities)
    {
        ArgumentNullException.ThrowIfNull(entities);

        var list = new List<TEntity>();

        await foreach (var item in entities)
            list.Add(item);

        return list;
    }
}